{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <div class="container-fluid d-flex flex-column gap-5">
        <a class="link-info" href="{{ path('app_index') }}">
            Back to home
        </a>
        <h1 class="text-white">TV shows</h1>
        <div class="container text-white">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-outline-info">search</button>
            {{ form_end(form) }}
        </div>
        <div class="container-fluid d-flex justify-content-center align-items-start gap-5 flex-wrap">
            {% for program in programs %}
                {% include 'program/_programPreview.html.twig' %}
            {% else %}
                Unable to find series
            {% endfor %}
        </div>
    </div>
{% endblock %}
