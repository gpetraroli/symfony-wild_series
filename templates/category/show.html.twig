{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <h1>Toutes les séries de la table program : </h1>
    {% for program in programs %}
        <div>
            <h2>{{ program.id }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2>
            <p>{{ program.synopsis }}</p>
            <a href="{{ path('program_show', {id: program.id}) }}">more...</a>
        </div>
    {% else %}
        No Tv shows were found
    {% endfor %}

    <a href="{{ path('category_index') }}">
        Back to categories
    </a>
{% endblock %}
